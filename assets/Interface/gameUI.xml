<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">

    <useStyles filename="nifty-default-styles.xml" />
    <useControls filename="nifty-default-controls.xml" />

    <screen id="start" controller="com.jm3.tdb.state.GameScreenAppState">
  
        <layer id="layer" childLayout="horizontal">
            
            <panel id="panelGame" height="100%" width="70%" align="left" valign="center" childLayout="vertical" backgroundColor="#0000" visibleToMouse="false">
                <control name="lbl3" text="PPPPPPPPPPPPPPPPPPP" align="center" valign="center" width="100%" height="100%" />
            </panel>
            
            <panel id="panelOption" height="100%" width="30%" align="left" valign="top" childLayout="vertical" visibleToMouse="true">
                
                <panel id="panelOptionInfo" height="20%" width="100%" align="left" valign="top" backgroundColor="#ffff" childLayout="horizontal" visibleToMouse="true">
                
                    <control name="lbl1" text="Level" align="center" valign="center" />
                    <control name="lblLevel" text="1" align="center" valign="center" />
                    
                </panel>
            
                <panel id="panelOptionTower" height="20%" width="100%" align="left" valign="top" backgroundColor="#0fff" childLayout="horizontal" visibleToMouse="true">
                    <control name="lbl2" text="Level" align="center" valign="center" />
                </panel>
            
                <panel id="panelOptionUpdate" height="40%" width="100%" align="left" valign="top" backgroundColor="#00ff" childLayout="horizontal" visibleToMouse="true">
                
                </panel>
            
                <panel id="panelOptionStart" height="20%" width="100%" align="left" valign="top" backgroundColor="#f00f" childLayout="horizontal" visibleToMouse="true">
                    <!--
                    <panel id="panelOptionStartVertical" height="100%" width="100%" align="left" valign="top" childLayout="vertical" visibleToMouse="true">
                
                        <control id="btnGo" name="button" label="GO" />
                        
                    </panel>
                    -->
                </panel>
                
            </panel>
            
        </layer>
    </screen>
</nifty>
